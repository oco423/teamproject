<h2 class="page-header">Submit your feedback</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<form method="post" action="/feedback/submitFeedback">
  <div class="form-group">
    <label>Title</label>
    <input type="text" class="form-control" name="Title" placeholder="Title">
  </div>
  <div class="form-group">
    <label>Description</label>
    <textarea class="form-control" rows="4" name="Description" placeholder="Descrption"></textarea>
  </div>
  <div class="form-group">
    <select class="selectpicker" id = "feedbackType" name = "feedbackType" title="Type of Feedback">
      <option value="Technical Issue">Technical Issue</option>
      <option value = "Constructive/Destructive Criticism">Constructive/Destructive Criticism</option>
    </select>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>

<a href="/feedback/viewFeedback">Click here to view all feedback</a>
